import "time"

    
# Time rule info
# We expect requests to only happen during work days (0 for Sunday, 6 for Saturday)
workdays = rule {
    time.now.weekday == 0 
}

# We expect requests to only happen during work hours
workhours = rule {
    time.now.hour > 1 and time.now.hour < 12  #GMT Time
} 

main = rule {
    workdays and workhours
}
